---
apiVersion: batch/v1
kind: Job
metadata:
  name: fio
spec:
  template:
    metadata:
      labels:
        type: benchmark-pod
    spec:
{% if nodeselector is defined %}
      nodeSelector:
        {{ nodeselector.split("=")[0] }}: {{ nodeselector.split("=")[1] }}
{% endif %}

      volumes:
      - name: output-volume
        emptyDir: {}

      containers:
      - name: benchmark-complete
        image: rhel7
        volumeMounts:
          - mountPath: {{ podoutdir }}
            name: output-volume
        command: ["/bin/sh"]
        args: ["-c", "touch {{ podoutdir }}/benchmark.run.completed.txt; sleep 3600"]

      initContainers:

      - name: fio-genhosts
        image: quay.io/mpillai/fio
        volumeMounts:
          - mountPath: {{ podoutdir }}
            name: output-volume
        command: ["/bin/sh"]
        args:
          - "-c"
          - >
            touch {{ podoutdir }}/hostlist
{% for ii in range(ninstances) %}
            ; echo {{ serverlist[ii] }} >> {{ podoutdir }}/hostlist
{% endfor %}

{% if testrread %}

      - name: fio-genrreadjob
        image: quay.io/mpillai/fio
        volumeMounts:
          - mountPath: {{ podoutdir }}
            name: output-volume
        command: ["/bin/sh"]
        args:
          - "-c"
          - |
            cat > {{ podoutdir }}/jobfile.fiorandread <<EOF
            [randomread]
            rw=randread
            ioengine=libaio
            direct=1
            iodepth={{ iodepth }}
{% if rate_iops is defined %}
            rate_iops={{ rate_iops }}
{% endif %}
            time_based=1
            runtime={{ runtime_sec }}
            directory={{ datadir }}
            filename_format=f.\$jobnum.\$filenum
            bs={{ bs_kb }}k
            filesize={{ filesize_gb }}g
            numjobs={{ numjobs }}
            EOF

      - name: fio-randomread
        image: quay.io/mpillai/fio
        volumeMounts:
          - mountPath: {{ podoutdir }}
            name: output-volume
        command: ["/bin/sh"]
        args:
          - "-c"
          - >
            fio
            --output={{ podoutdir }}/fio.randread.run.txt
            --client={{ podoutdir }}/hostlist
            {{ podoutdir }}/jobfile.fiorandread

{% endif %}

{% if testrwrite %}

      - name: fio-genrwritejob
        image: quay.io/mpillai/fio
        volumeMounts:
          - mountPath: {{ podoutdir }}
            name: output-volume
        command: ["/bin/sh"]
        args:
          - "-c"
          - |
            cat > {{ podoutdir }}/jobfile.fiorandwrite <<EOF
            [randomwrite]
            rw=randwrite
            ioengine=libaio
            direct=1
            iodepth={{ iodepth }}
{% if rate_iops is defined %}
            rate_iops={{ rate_iops }}
{% endif %}
            time_based=1
            runtime={{ runtime_sec }}
            directory={{ datadir }}
            filename_format=f.\$jobnum.\$filenum
            bs={{ bs_kb }}k
            filesize={{ filesize_gb }}g
            numjobs={{ numjobs }}
            EOF

      - name: fio-randomwrite
        image: quay.io/mpillai/fio
        volumeMounts:
          - mountPath: {{ podoutdir }}
            name: output-volume
        command: ["/bin/sh"]
        args:
          - "-c"
          - >
            fio
            --output={{ podoutdir }}/fio.randwrite.run.txt
            --client={{ podoutdir }}/hostlist
            {{ podoutdir }}/jobfile.fiorandwrite

{% endif %}

      restartPolicy: Never
...
