---
apiVersion: v1
kind: Service
metadata:
  name: server-fio
  labels:
    name: server-fio
spec:
  ports:
  - port: {{ port }}
    targetPort: {{ port }}
  clusterIP: None
  selector:
    role: server-fio
...
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: server-fio
spec:
  selector:
    matchLabels:
      role: server-fio
  serviceName: "server-fio"
  replicas: {{ nservers }}
  template:
    metadata:
      labels:
        role: server-fio
    spec:
{% if nodelabel is defined %}
      nodeSelector:
        {{ nodelabel.split("=")[0] }}: {{ nodelabel.split("=")[1] }}
{% endif %}
      containers:
      - name: fioserver
        image: quay.io/mpillai/fio
        volumeMounts:
          - mountPath: {{ datadir }}
            name: server-fio-pvc
        ports:
          - containerPort: {{ port }}
        command: ["/bin/sh"]
        args:
          - "-c" 
          - > 
            fio --server

  volumeClaimTemplates:
  - metadata:
      name: server-fio-pvc
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: {{ pvcsize_gb }}Gi
{% if storageclass is defined %}
      storageClassName: {{ storageclass }}
{% endif %}

...
